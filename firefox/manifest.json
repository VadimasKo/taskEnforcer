{
  "manifest_version": 2,
  "name": "TaskEnforcer",
  "version": "1.0",

  "description": "Makes sure your tasks are completed",
  "homepage": "https://github.com/VadimasKo/taskEnforcer",

  "permissions": [
    "activeTab",
    "webRequest", 
    "webRequestBlocking",
    "<all_urls>",
    "storage"
  ],

  "icons": {
    "48": "icons/border-48.png"
  },

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "TaskEnforcer",
    "default_popup": "popup/popup.html"
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "background": {
    "scripts": ["initialize.js", "background.js"],
    "persistent": false
  },

  "web_accesible_resources": [
    "options/options.html"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "taskEnforcer@example.com",
      "strict_min_version": "48.0"
    }
  }
  
}
